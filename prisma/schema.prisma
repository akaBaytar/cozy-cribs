datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id            String    @id @default(uuid())
  clerkId       String    @unique
  firstName     String
  lastName      String
  email         String
  profileImage  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  properties    Property[]
  favorites     Favorite[]
}

model Property {
  id            String    @id @default(uuid())
  profileId     String
  name          String
  tagline       String
  category      String
  image         String
  country       String
  description   String
  amenities     String
  price         Int
  guests        Int
  bedrooms      Int
  beds          Int
  baths         Int
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  favourites    Favorite[]
  profile       Profile    @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
}

model Favorite {
  id            String     @id @default(uuid())
  profileId     String
  propertyId    String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  profile       Profile    @relation(fields: [profileId],references: [clerkId], onDelete: Cascade)
  property      Property   @relation(fields: [propertyId],references: [id],onDelete: Cascade)
}